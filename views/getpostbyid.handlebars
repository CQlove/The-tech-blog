<div>
    {{!-- if logged in, you can add comment --}}
    {{#if loggedIn}}
    {{>post-details post}}
    {{>comment post.comment}}
    <div>
        <p>Comment:<input placeholder="add comment here" id="input"></p>
        <button type="submit" id="submit-comment">Submit</button>
    </div>
    {{else}}
    {{!-- if not logged in, go to login page --}}
    <script>
        window.location.href = "/login"; 
    </script>
    {{/if}}
</div>



{{!-- if logged in we use comment.js to deal with the logic --}}
{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}